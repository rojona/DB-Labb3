<Window x:Class="NET24_Labb2_WPF.Dialogs.LoadGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Game" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Choose game to load:" 
                   Grid.Row="0" 
                   Margin="0,0,0,10"/>

        <ListBox x:Name="SavedGamesList" 
                 Grid.Row="1" 
                 Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="Save Name: "/>
                            <Run Text="{Binding PlayerName}"/>
                            <Run Text=" - Player: " />
                            <Run Text="{Binding OriginalPlayerName}"/>
                            <Run Text=" - Health: "/>
                            <Run Text="{Binding PlayerHealth}"/>
                            <Run Text=" - Saved at: "/>
                            <Run Text="{Binding SavedAt}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Delete"
                    Width="75"
                    Click="DeleteButton_Click"
                    Margin="0, 0, 60, 0"/>
            <Button Content="Load" 
                    Width="75" 
                    Click="LoadButton_Click" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>